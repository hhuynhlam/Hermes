<style>
  h3 {
    margin-bottom: 40px !important;
    margin-left: -5px !important;
    text-transform: uppercase;
  }
  section {
    align-items: center;
    display: flex !important;
    flex-direction: column;
    height: 100vh;
    justify-content: center;
    width: 100vw;
  }
  content {
    height: 50% !important;
    max-height: 800px !important;
    max-width: 600px !important;
    min-height: 300px !important;
    min-width: 300px !important;
    width: 50% !important;
  }
  .center {
    text-align: center;
  }
  .btn {
    background-color: #00565d !important;
    width: 70%;
  }
  .btn > input {
    color: #FFF;
  }
</style>

<% unless alert.nil? %>
  <div class="alert alert-danger" role="alert"><%= alert %></div>
<% end %>
<% unless notice.nil? %>
  <div class="alert alert-warning" role="alert"><%= notice %></div>
<% end %>

<section>
  <content class="container">
    <h3>Log in</h3>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row">
        <div class="input-field col s12">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "validate" %>
          <%= f.label :email %>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <%= f.password_field :password, autocomplete: "current-password" %>
          <%= f.label :password %>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12 center">
          <%= f.submit "Log in", class: "waves-effect waves-light btn" %>
        </div>
      </div>
    <% end %>
  </content>
</section>

